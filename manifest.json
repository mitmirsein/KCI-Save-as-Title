{
  "manifest_version": 3,
  "name": "KCI Save as Title",
  "version": "1.3", // 아이콘 추가로 버전 업데이트 (선택 사항)
  "description": "Downloads KCI papers with their titles as filenames.",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.kci.go.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.kci.go.kr/kciportal/ci/sereArticleSearch/ciSereArtiView.kci*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "kci-icon-16.png",
    "32": "kci-icon-32.png",
    "48": "kci-icon-48.png",
    "128": "kci-icon-128.png"
  }
}
